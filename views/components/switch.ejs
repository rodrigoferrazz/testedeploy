<div class="student-switcher" id="student-switcher" data-guardian-id="<%= guardianId %>">
  <img
    src="<%= student.signed_photo_url %>"
    alt="Student photo"
    class="student-switcher-photo"
  />
  <div class="student-switcher-overlay">
    <span class="switcher-icon">
      <svg xmlns="http://www.w3.org/2000/svg"
           width="16" height="16"
           fill="currentColor"
           class="bi bi-arrow-left-right"
           viewBox="0 0 16 16">
        <path fill-rule="evenodd"
              d="M1 11.5a.5.5 0 0 0 .5.5h11.793l-3.147 
                 3.146a.5.5 0 0 0 .708.708l4-4a.5.5 
                 0 0 0 0-.708l-4-4a.5.5 0 0
                 0-.708.708L13.293 11H1.5a.5.5 
                 0 0 0-.5.5m14-7a.5.5 0 0 
                 1-.5.5H2.707l3.147 3.146a.5.5 
                 0 1 1-.708.708l-4-4a.5.5 0 0 
                 1 0-.708l4-4a.5.5 0 1 
                 1 .708.708L2.707 4H14.5a.5.5 
                 0 0 1 .5.5"/>
      </svg>
    </span>
  </div>
</div>

<!-- Modal customizado -->
<div class="switcher-modal-overlay" id="switcher-modal-overlay">
  <div class="switcher-modal">
    <h2 class="switcher-modal-title">Confirmation</h2>
    <p class="switcher-modal-text">
      Are you sure you want to choose another student?
    </p>
    <div class="switcher-modal-buttons">
      <button class="btn-cancel" id="switcher-btn-cancel">Cancel</button>
      <button class="btn-confirm" id="switcher-btn-confirm">Change</button>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
  const switcher = document.getElementById('student-switcher');
  const overlay = document.getElementById('switcher-modal-overlay');
  const btnCancel = document.getElementById('switcher-btn-cancel');
  const btnConfirm = document.getElementById('switcher-btn-confirm');

  if (!switcher || !overlay) return;

  const guardianId = switcher.dataset.guardianId;

  switcher.addEventListener('click', (e) => {
    e.preventDefault();
    overlay.classList.add('active');
  });

  btnCancel.addEventListener('click', (e) => {
    e.preventDefault();
    overlay.classList.remove('active');
  });

  btnConfirm.addEventListener('click', (e) => {
    e.preventDefault();
    window.location.href = `/students/guardians/${guardianId}/students`;
  });
});
</script>