<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <link rel="icon" type="image/png" sizes="128x128" href="/assets/logo_title.png">
  <title>Change Password âˆ™ St. Paul's</title>
  <!-- Reuse the same login stylesheet -->
  <link rel="stylesheet" href="/css/change_password/style.css" />
  <link href="https://fonts.cdnfonts.com/css/archer-2" rel="stylesheet">
  <link href="https://fonts.cdnfonts.com/css/century-gothic-paneuropean" rel="stylesheet">
</head>
<body>
  <!-- Popup de aviso -->
  <!-- Popup de aviso -->
<div id="password-change-popup" class="popup-overlay">
  <div class="popup-container">
    <h2 class="popup-title">Password Update Required</h2>
    <p class="popup-subtitle">
      You need to change your password because it is the first time on our website, sorry for the inconvenience.
    </p>
    <button id="popup-ok-button" class="popup-button">OK</button> <!-- Corrigido de id="png" para id="popup-ok-button" -->
  </div>
</div>

  <div class="login-page">
    <!-- Background and overlay -->
    <div class="login-background"></div>
    <div class="login-overlay"></div>

    <!-- Logo -->
    <div class="logo-container">
      <div class="logo-icon"></div>
      <div class="logo-text-primary"></div>
      <div class="logo-text-secondary"></div>
    </div>

    <!-- Form box -->
    <div class="login-box">
      <div class="login-title">Change your password</div>

      <% if (error) { %>
        <div class="server-error"><%= error %></div>
      <% } %>

      <form id="change-password-form"
            action="/guardians/<%= guardianId %>/change-password"
            method="POST"
            novalidate>
        
        <!-- New password -->
        <div class="field-group">
          <div class="password-container">
            <input
              id="newPassword"
              type="password"
              name="newPassword"
              class="input-field input-password"
              placeholder="New password"
            />
            <button type="button" class="toggle-password">
              <img src="/icons/eye-hide.svg" alt="Show password">
            </button>
          </div>
          <span class="error-msg" id="newPassword-error">
            Please, insert your new password.
          </span>
        </div>

        <!-- Confirm password -->
        <div class="field-group">
          <div class="password-container">
            <input
              id="confirmPassword"
              type="password"
              name="confirmPassword"
              class="input-field input-password"
              placeholder="Confirm new password"
            />
            <button type="button" class="toggle-password">
              <img src="/icons/eye-hide.svg" alt="Show password">
            </button>
          </div>
          <span class="error-msg" id="confirmPassword-error">
            Please, confirm your new password.
          </span>
        </div>

        <!-- HELP + Submit -->
        <div class="form-buttons">
          <button
            type="button"
            class="help-button"
            onclick="window.location.href='/help';"
          >
            HELP
          </button>
          <button type="submit" class="login-button">CHANGE</button>
        </div>
      </form>
    </div>
  </div>

  <script>
    // Toggle visibility for both password fields
    document.querySelectorAll('.toggle-password').forEach(btn => {
      btn.addEventListener('click', () => {
        const inp = btn.parentElement.querySelector('input');
        const isPwd = inp.type === 'password';
        inp.type = isPwd ? 'text' : 'password';
        btn.querySelector('img').src = isPwd
          ? '/icons/eye-show.svg'
          : '/icons/eye-hide.svg';
        btn.querySelector('img').alt = isPwd
          ? 'Hide password'
          : ' show password';
      });
    });

    // Basic client-side validation
    const form = document.getElementById('change-password-form');
    const fields = [
      { inp: 'newPassword', err: 'newPassword-error' },
      { inp: 'confirmPassword', err: 'confirmPassword-error' }
    ];

    form.addEventListener('submit', e => {
      let ok = true;
      fields.forEach(f => {
        const el = document.getElementById(f.inp);
        const msg = document.getElementById(f.err);
        if (!el.value.trim()) {
          ok = false;
          e.preventDefault();
          el.classList.add('invalid');
          msg.style.display = 'block';
        } else {
          el.classList.remove('invalid');
          msg.style.display = 'none';
        }
      });

      // extra: matching passwords
      const np = document.getElementById('newPassword');
      const cp = document.getElementById('confirmPassword');
      if (np.value && cp.value && np.value !== cp.value) {
        ok = false;
        e.preventDefault();
        document.querySelector('.server-error')?.remove();
        const div = document.createElement('div');
        div.className = 'server-error';
        div.textContent = 'Passwords do not match.';
        form.prepend(div);
      }
    });

    // Popup logic
    const popup = document.getElementById('password-change-popup');
    const okBtn = document.getElementById('popup-ok-button');
    okBtn.addEventListener('click', () => {
      popup.style.display = 'none';
    });
  </script>
</body>
</html>