<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <link rel="icon" type="image/png" sizes="128x128" href="/assets/logo_title.png">
  <title>St. Paul's School</title>
  <!-- Importar estilos da página de login -->
  <link rel="stylesheet" href="/css/login/style.css" />
  <link href="https://fonts.cdnfonts.com/css/archer-2" rel="stylesheet">
  <link href="https://fonts.cdnfonts.com/css/century-gothic-paneuropean" rel="stylesheet">
</head>
<body>
  <div class="login-page">
    
    <!-- Background e overlay -->
    <div class="login-background"></div>
    <div class="login-overlay"></div>

    <!-- Logo -->
    <div class="logo-container">
      <div class="logo-icon"></div>
      <div class="logo-text-primary"></div>
      <div class="logo-text-secondary"></div>
    </div>

    <!-- Caixa de login -->
    <div class="login-box">
      
      <div class="login-title">Login</div>
        
      <!-- Formulário com novalidate -->
      <form id="login-form" action="/login" method="POST" novalidate>
        <!-- Grupo de e-mail -->
        <div class="field-group">
          <input
            id="email-field"
            type="email"
            class="input-field input-email"
            name="email_guardians"
            placeholder="E-mail address"
          />
          <span class="error-msg" id="email-error">Please, insert your e-mail address.</span>
        </div>

        <!-- Grupo de password -->
        <div class="field-group">
          <div class="password-container">
            <input
              id="password-field"
              type="password"
              class="input-field input-password"
              name="password_guardians"
              placeholder="Password"
            />
            <button type="button" class="toggle-password">
              <img src="/icons/eye-hide.svg" alt="Show password">
            </button>
          </div>
          <span class="error-msg" id="password-error">Please, insert your password.</span>
        </div>
        <% if (typeof error !== 'undefined' && error) { %>
          <div class="server-error"><%= error %></div>
        <% } %>
        <!-- Botões de ajuda e envio -->
        <div class="form-buttons">
          <button
            type="button"
            class="help-button"
            onclick="window.location.href='/help';"
          >
            HELP
          </button>
          <button type="submit" class="login-button">ENTER</button>
        </div>
      </form>

    </div>
  </div>

  <!-- Script para alternar visibilidade da password e validação customizada -->
  <script>
    // Toggle de exibição da password
    const togglePasswordBtn = document.querySelector('.toggle-password');
    const passwordInput = document.querySelector('#password-field');

    togglePasswordBtn.addEventListener('click', () => {
      const isPassword = passwordInput.type === 'password';
      passwordInput.type = isPassword ? 'text' : 'password';
      togglePasswordBtn.querySelector('img').src = isPassword 
        ? '/icons/eye-show.svg' 
        : '/icons/eye-hide.svg';
      togglePasswordBtn.querySelector('img').alt = isPassword 
        ? 'Hide password' 
        : 'Show password';
    });

    // Validação personalizada do formulário
    const form = document.getElementById('login-form');
    const emailField = document.getElementById('email-field');
    const passwordField = document.getElementById('password-field');
    const emailError = document.getElementById('email-error');
    const passwordError = document.getElementById('password-error');

    form.addEventListener('submit', (e) => {
      let formOK = true;

      // Validações de campo vazio
      if (!emailField.value.trim()) {
        e.preventDefault();
        formOK = false;
        emailError.style.display = 'block';
        emailField.classList.add('invalid');
      } else {
        emailError.style.display = 'none';
        emailField.classList.remove('invalid');
      }

      if (!passwordField.value.trim()) {
        e.preventDefault();
        formOK = false;
        passwordError.style.display = 'block';
        passwordField.classList.add('invalid');
      } else {
        passwordError.style.display = 'none';
        passwordField.classList.remove('invalid');
      }
    });
  </script>
</body>
</html>